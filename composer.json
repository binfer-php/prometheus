{
    "name": "binfer/php-prometheus",

    "type": "vcs",
    "description": "A prometheus client.",
    "keywords": ["binfer", "composer"],
    "homepage": "https://github.com/binfer-php/prometheus.git",
    "license":  "MIT",

    "authors": [
        {
            "name": "binfer",
            "email": "binfer.mvp@gmail.com",
            "homepage": "http://www.binfer.live",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=5.6.3",
        "guzzlehttp/guzzle": "^6.2",
        "symfony/polyfill-apcu": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.0"
    },
    "suggest": {
        "ext-redis": "Required if using Redis.",
        "ext-apc": "Required if using APCu."
    },
    "autoload": {
        "psr-0": {
            "Prometheus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Test\\Prometheus\\": "tests/"
        }
    }
}
